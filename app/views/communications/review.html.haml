%div#review-docs
  %h1 Récapitulatif
  %input{:id=>"activite_id", :value=>@communication.activite.id, :type=>"hidden"}
  %input{:id=>"communication_id", :value=>@communication.id, :type=>"hidden"}
  
  %table{:border => "0", :id=>'data-table-review', :class => 'data-table-standard'}
    %thead
      %th Nom
      %th Prénom
      %th Document
      %th Envoi par
    %tbody
      - @communication.contact_to_communications.where('transmission_medium_id != 0').each do |concom|
        %tr
          %td= concom.contact.nom
          %td= concom.contact.prenom
          %td
            %a{:href=> concom.generate_template_doc_link , :target=>'_blank'} Document final à envoyer
          %td= concom.transmission_medium.description

        
    