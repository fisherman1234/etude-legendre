%h3 Edition d'un contact
%div#tabs
  %ul
    %li
      %a{:href=> "#tabs-0"} Fiche récapitulative
    %li
      %a{:href=> "#tabs-1"} Dossiers
    %li
      %a{:href=> "#tabs-2"} Activité
    %li
      %a{:href=> "#tabs-3"} Documents échangés
    %li{:style=>"float:right;"}
      %a{:href=> "#tabs-4",  :class => "removeRecord", :onClick => "delete_page('/contacts/"+@contact.id.to_s+"/destroy');"} Supprimer
      
  %div#tabs-0
    = render 'form'

  %div#tabs-1
    %table{:class => "data-table-standard"}
      %thead
        %tr
          %th Référence
          %th Juridiction
          %th Nom de l'affaire
      %tbody
        - @contact.dossiers.each do |dossier|
          %tr
            %td= dossier[0]
            %td= dossier[2]
            %td= dossier[1]
  
  %div#tabs-2
  %div#tabs-3
