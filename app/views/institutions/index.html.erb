<h1>Listing institutions</h1>

<table>
  <tr>
    <th>Nom</th>
    <th>Type</th>
    <th>Chambre</th>
    <th>Telephone</th>
    <th>Fax</th>
    <th>Site web</th>
    <th>Commentaires</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @institutions.each do |institution| %>
  <tr>
    <td><%= institution.nom %></td>
    <td><%= institution.type %></td>
    <td><%= institution.chambre %></td>
    <td><%= institution.telephone %></td>
    <td><%= institution.fax %></td>
    <td><%= institution.site_web %></td>
    <td><%= institution.commentaires %></td>
    <td><%= link_to 'Show', institution %></td>
    <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
    <td><%= link_to 'Destroy', institution, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

